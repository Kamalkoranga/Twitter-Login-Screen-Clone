MDScreen:
    name: 'signup'
    MDFloatLayout:
        md_bg_color: 0, 172/255, 238/255, 1

        Image:
            source: 'icon.png'
            pos_hint: {'center_y': .75}

        MDLabel:
            text: "Join Twitter today."
            pos_hint: {'center_x': 0.5,'center_y': 0.5}
            halign: 'center'
            font_name: 'BMontserrat'
            color: 1 , 1 , 1 , 1
            font_size: '22sp'

        MDFloatLayout:
            size_hint: .75, 0.085
            pos_hint: {'center_x': 0.5,'center_y': 0.4}
            canvas:
                Color:
                    rgb: 1, 1, 1, 1
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [25]
            TextInput:
                hint_text: 'Full Name'
                font_name: 'BMontserrat'
                size_hint: 1, None
                height: self.minimum_height
                pos_hint: {'center_x': 0.5,'center_y': 0.5}
                cursor_color: 0, 0, 0, 1
                multiline: False
                background_color: 1, 1, 1, 0
                foreground_color: 127/255, 202/255, 248/255, 1
                padding: 26
                hint_text_color: 195/255, 195/255, 195/255, 1

        MDFloatLayout:
            size_hint: .75, 0.085
            pos_hint: {'center_x': 0.5,'center_y': 0.3}
            canvas:
                Color:
                    rgb: 1, 1, 1, 1
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [25]
            TextInput:
                hint_text: 'Email'
                font_name: 'BMontserrat'
                size_hint: 1, None
                height: self.minimum_height
                pos_hint: {'center_x': 0.5,'center_y': 0.5}
                cursor_color: 0, 0, 0, 1
                multiline: False
                background_color: 1, 1, 1, 0
                foreground_color: 127/255, 202/255, 248/255, 1
                padding: 26
                hint_text_color: 195/255, 195/255, 195/255, 1

        Button:
            text:'Continue'
            font_name: 'BMontserrat'
            size_hint: .5, .085
            pos_hint: {'center_x': 0.5,'center_y': 0.18}
            background_color: 1, 1, 1, 0
            color: 127/255, 202/255, 248/255, 1
            on_release:
                root.manager.transition.direction = "left"
                root.manager.current = "touch_id"
            canvas.before:
                Color:
                    rgb: 1, 1, 1, 1
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [25]

        MDLabel:
            text: 'Already have an account? Login'
            font_name: 'BMontserrat'
            pos_hint: {'center_y': 0.08}
            halign: 'center'
            color: 1, 1, 1, 1
            font_size: '14sp'
